# Server Configuration
# Port the application will run on (default: 4000)
PORT=4000

# Chargebee Configuration
# Your Chargebee site name (e.g., 'mycompany-test' from mycompany-test.chargebee.com)
CHARGEBEE_SITE=your_chargebee_site_name

# Chargebee API Key
# Get this from your Chargebee Settings -> API Keys & Webhooks
CHARGEBEE_API_KEY=your_chargebee_api_key

# Chargebee Webhook Authentication
# Basic Auth credentials that Chargebee will use when sending webhooks
# Set these in your Chargebee webhook configuration
CHARGEBEE_WEBHOOK_USERNAME=your_webhook_username
CHARGEBEE_WEBHOOK_PASSWORD=your_webhook_password

# Hookdeck Configuration
# API Key for Hookdeck
# Get this from your Hookdeck dashboard under Settings -> API Keys
HOOKDECK_API_KEY=your_hookdeck_api_key

# Webhook secret used to verify Hookdeck signatures
# Get this from your Hookdeck dashboard under Project -> Secrets
HOOKDECK_WEBHOOK_SECRET=your_hookdeck_webhook_secret

# Production Destination URL (PROD mode only)
# The base URL of your production application where webhooks will be delivered
PROD_DESTINATION_URL=https://your-production-domain.com